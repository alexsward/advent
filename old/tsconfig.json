{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "alwaysStrict": true,
    "baseUrl": "./",
    "paths": {
        "@lib": ["./src/lib"],
        "@lib/*": ["./src/lib/*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
  },
  "include": ["src/**/*"],
}
